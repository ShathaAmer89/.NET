@model ItemListViewModel

<h1>List of House Items (@Model.CurrentViewName View)</h1>
<a href="/Item/Table">Table View</a>

<div class="row row-cols-1 row-cols-md-4 row-cols-lg-4 row-cols-sm-2  g-4">
    @foreach (var item in Model.Items)
    {
        <partial name="_ItemCard" model="item" />
    }
</div>
<div>
    <p>
        <a class="btn btn-outline-primary"
           asp-controller="Item"
           asp-action="Create">New House</a>
    </p>
</div>