@model Booking

<h2>Delete this Booking</h2>
<h3>Are you sure you want to delete this booking?</h3>
<div>
    <div class="bg-light">
    <h4>Booking:</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Booking Id</dt>
        <dd class="col-sm-10">@Model.BookingId</dd>
    </dl>
    <dl class="row">
        <dt class="col-sm-2">Customer name</dt>
        <dd class="col-sm-10">@Model.Customer.Name</dd>
    </dl>
    <dl class="row">
        <dt class="col-sm-2">Customer Id</dt>
        <dd class="col-sm-10">@Model.Customer.CustomerId</dd>
    </dl>
    <dl class="row">
        <dt class="col-sm-2">House number</dt>
        <dd class="col-sm-10">@Model.ItemId</dd>
    </dl>
        <dl class="row">
            <dt class="col-sm-2">Start reservtion</dt>
            <dd class="col-sm-10">@Model.StartDate</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">End reservtion</dt>
            <dd class="col-sm-10">@Model.EndDate</dd>
        </dl>        
    <dl class="row">
        <dt class="col-sm-2">Date</dt>
        <dd class="col-sm-10">@Model.BookingDate</dd>
    </dl>
   </div>
   
    <form asp-action="DeleteBookingConfirmed" asp-route-id="@Model.BookingId" method="post">
        <button type="submit" class="btn btn-outline-danger">Delete</button>
        <a asp-action="Table" class="btn btn-outline-secondary">Cancel</a>
    </form>
</div>