@model Item

<h2>Delete this house</h2>
<h3>Are you sure you want to delete this house?</h3>
<div>
    <h4>House:</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">House Id</dt>
        <dd class="col-sm-10">@Model.ItemId</dd>
    </dl>
    <dl class="row">
        <dt class="col-sm-2">Category</dt>
        <dd class="col-sm-10">@Model.Category</dd>
    </dl>
    <dl class="row">
        <dt class="col-sm-2">Rooms</dt>
        <dd class="col-sm-10">@Model.Rooms</dd>
    </dl>
    <dl class="row">
        <dt class="col-sm-2">Area</dt>
        <dd class="col-sm-10">@Model.Area</dd>
    </dl>
    <dl class="row">
        <dt class="col-sm-2">Renting</dt>
        <dd class="col-sm-10">@Model.Renting</dd>
    </dl>
    <form asp-action="DeleteConfirmed" asp-route-id="@Model.ItemId" method="post">
        <button type="submit" class="btn btn-outline-danger">Delete</button>
        <a asp-action="Table" class="btn btn-outline-secondary">Cancel</a>
    </form>
</div>