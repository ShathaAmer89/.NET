@model IEnumerable<HouseRenting.Models.Booking>
<div class="container" id="booking">
    <h1>List of Bookings</h1>
     @foreach (var booking in Model)
        {
            <div class="container bg-light">
            <p class="text-primary">Booking @booking.BookingId</p>
            @{
                DateTime startDate = (DateTime)booking.StartDate;
                string formattedStartDate = startDate.ToShortDateString();
                DateTime endDate = (DateTime)booking.EndDate;
                string formattedEndDate = endDate.ToShortDateString();
            }
            <table class="table table-striped">
                <tr>
                    <th>HousseNr</th>
                    <th>Location</th>
                    <th>CustomerId</th>
                    <th>Customer Name</th>
                    <th>Date</th>
                    <th>Start reservation</th>
                    <th>End reservation</th>
                    <th>Action</th>
                </tr>
                <tr>
                    <td>@booking.ItemId</td>
                    <td>@(booking.Items?.Location ?? "No Location")</td>
                    <td>@booking.Customer.CustomerId</td>
                    <td>@booking.Customer.Name</td>
                    <td>@booking.BookingDate</td>                    
                    <td>@formattedStartDate</td>
                    <td>@formattedEndDate</td>
                    <td>
                        <p>
                            <a class="btn btn-outline-danger" asp-route-id="@booking.BookingId"
                               asp-controller="Booking"
                               asp-action="DeleteBooking">Delete this Booking</a>
                        </p>

                    </td>
                </tr>

            </table>
           </div>
        }
</div>
