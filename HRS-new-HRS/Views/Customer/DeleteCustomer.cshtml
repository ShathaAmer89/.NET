@model Customer

<h2>Delete this Customer</h2>
<h3>Are you sure you want to delete this Customer?</h3>
<div>
    <div class="bg-light">
    <h4>Customer:</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Customer Id</dt>
        <dd class="col-sm-10">@Model.CustomerId</dd>
    </dl>
    <dl class="row">
        <dt class="col-sm-2">Customer name</dt>
        <dd class="col-sm-10">@Model.Name</dd>
    </dl>
    <dl class="row">
        <dt class="col-sm-2">Customer phone</dt>
        <dd class="col-sm-10">@Model.Phone</dd>
    </dl>
    <dl class="row">
        <dt class="col-sm-2">Customer email</dt>
        <dd class="col-sm-10">@Model.Email</dd>
    </dl>
    </div>
   
    <form asp-controller="Customer" asp-action="DeleteCustomerConfirmed" asp-route-id="@Model.CustomerId" method="post">
        <button type="submit" class="btn btn-outline-danger">Delete</button>
        <a asp-action="Table" class="btn btn-outline-secondary">Cancel</a>
    </form>
</div>